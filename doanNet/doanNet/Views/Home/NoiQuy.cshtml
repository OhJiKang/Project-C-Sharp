
@{
    ViewBag.Title = "NoiQuy";
    Layout = "~/Views/Shared/layout.cshtml";
}
<style>
    .card {
        transition: box-shadow 0.3s ease;
    }

        .card:hover {
            border: 1px solid #ced4da; /* Gray border color */
            box-shadow: 0px 3px 5px 0px rgba(0,0,0,0.3); /* Elevation effect */
        }

    body, html {
        height: 100%;
        margin: 0;
        padding: 0;
    }

    .container-full {
        min-height: 100%;
        background-color: lightgray;
        padding-bottom: 300px;
    }
    .card {
        cursor: pointer;
    }

</style>

